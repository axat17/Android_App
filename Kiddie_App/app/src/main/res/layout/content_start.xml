<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="akshat.com.kiddie.StartActivity"
    tools:showIn="@layout/activity_start">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="71dp"
        android:id="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Member"
        android:id="@+id/cmdNewParent"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/cmdNewDriverOption"
        android:layout_alignBottom="@+id/cmdNewDriverOption"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing User"
        android:id="@+id/cmdCurentUserOption"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignRight="@+id/cmdNewParent"
        android:layout_alignEnd="@+id/cmdNewParent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Driver"
        android:id="@+id/cmdNewDriverOption"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_above="@+id/cmdCurentUserOption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
