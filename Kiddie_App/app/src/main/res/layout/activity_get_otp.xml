<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="akshat.com.kiddie.GetOTPActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter OTP"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/edtOTP" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/edtOTP"
        android:layout_alignLeft="@+id/edtOTP"
        android:layout_alignStart="@+id/edtOTP"
        android:layout_marginTop="36dp"
        android:id="@+id/edtFPassword1"
        android:hint="Enter Password"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/edtFPassword1"
        android:layout_alignRight="@+id/edtFPassword1"
        android:layout_alignEnd="@+id/edtFPassword1"
        android:layout_marginTop="34dp"
        android:id="@+id/edtFPassword2"
        android:hint="Re-Enter Password"

        />

    <Button
        android:text="Reset Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtFPassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/cmdFPChange"
        style="@style/Widget.AppCompat.Button.Colored" />
</RelativeLayout>
