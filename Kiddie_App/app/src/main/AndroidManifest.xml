<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="akshat.com.kiddie">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DriverRegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserHomeActivity"
            android:label="@string/title_activity_user_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".StartActivity"></activity>
        <activity android:name=".ForgotPassActivity" />
        <activity android:name=".GetOTPActivity" />
        <activity
            android:name=".ParentHomeActivity"
            android:label="@string/title_activity_parent_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChangePass" />
        <activity android:name=".EditProfileDActivity" />
        <activity
            android:name=".EditProfilePActivity"
            android:label="@string/title_activity_edit_profile_p"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SeniorDetailActivity"
            android:label="@string/title_activity_senior_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddSeniorActivity"
            android:label="@string/title_activity_add_senior"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SeniorListDriverActivity"
            android:label="@string/title_activity_senior_list_driver"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".AppLocationService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>